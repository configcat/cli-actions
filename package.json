{
  "name": "setup-cli",
  "version": "1.0.0",
  "description": "GitHub Action for installing the ConfigCat CLI in workflows.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/install/main.ts -o dist/install && ncc build src/eval-flag/main.ts -o dist/eval-flag",
    "lint": "eslint **/*.ts",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/configcat/setup-cli.git"
  },
  "keywords": [
    "GitHub",
    "Action",
    "ConfigCat",
    "CLI"
  ],
  "author": "ConfigCat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/configcat/setup-cli/issues"
  },
  "homepage": "https://github.com/configcat/setup-cli#readme",
  "dependencies": {
    "@actions/cache": "^4.1.0",
    "@actions/core": "^1.11.1",
    "@actions/exec": "^1.1.1",
    "@actions/http-client": "^3.0.0",
    "@actions/tool-cache": "^2.0.2"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@vercel/ncc": "^0.38.4",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
